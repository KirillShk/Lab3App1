<Window x:Class="Lab3App1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab3App1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
   <Window.CommandBindings>
       <CommandBinding Command ="local:MyCommands.Exit" Executed="ExitExecude"/>
       <CommandBinding Command ="Open" Executed="OpenExecuted"/>
       <CommandBinding Command="Save" Executed="SaveExecuted" />
   </Window.CommandBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header ="Файл">
                <MenuItem Header="Открыть" Command="Open"/>
                <MenuItem Header="Сохранить" Command="Save" />
                <Separator/>
                <MenuItem Command="local:MyCommands.Exit" />
            </MenuItem>
            <MenuItem Header ="Правка">
                <MenuItem Header="Вставить" Command="Paste" CommandTarget="{Binding ElementName=textBox}"/>
                <MenuItem Header="Копировать" Command="Copy" CommandTarget="{Binding ElementName=textBox}"/>
            </MenuItem >
        </Menu>
        <ToolBarTray Grid.Row="1" >
            <ToolBar Margin="5" Padding="5">
                <ComboBox Margin="5" Padding="5" SelectedIndex="0" Width="200" SelectionChanged="ComboBox_SelectionChanged">
                    <TextBlock Text="Arial" FontFamily="Arial"/>
                    <TextBlock Text="Times New Roman" FontFamily="Times New Roman"/>
                    <TextBlock Text="Verdana" FontFamily="Verdana"/>
                </ComboBox>
                <ComboBox Margin="5" Padding="5" SelectedIndex="1" Width="50" SelectionChanged="ComboBox_SelectionChanged_1">
                    <TextBlock Text="12" />
                    <TextBlock Text="14" />
                    <TextBlock Text="16" />
                </ComboBox>
            </ToolBar>
            <ToolBar Margin="5" Padding="5">
                <ToggleButton Click="ToggleButton_Click">
                    <Image Source="Data/1.png" />
                </ToggleButton>
                <Separator/>
                <ToggleButton Click="ToggleButton_Click_1">
                    <Image Source="Data/2.png" />
                </ToggleButton>
                <Separator/>
                <ToggleButton Click="ToggleButton_Click_2">
                    <Image Source="Data/3.png" />
                </ToggleButton>
                <Separator/>
            </ToolBar>
            <ToolBar Margin="5" Padding="5">
                <StackPanel VerticalAlignment="Center">
                    <RadioButton Content="Зеленый" IsChecked="True" Checked="RadioButton_Checked" />
                    <RadioButton Content="Фиолетовый" Checked="RadioButton_Checked_1" />
                </StackPanel>
            </ToolBar>
        </ToolBarTray>
        <TextBox x:Name ="textBox" Grid.Row="2" Margin="5" Padding="5" FontSize="14" FontFamily="Arial" TextWrapping="Wrap"/>
    </Grid>
</Window>
